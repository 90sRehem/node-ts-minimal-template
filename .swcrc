{
    "jsc": {
        "externalHelpers": false,
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "baseUrl": "./src",
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@entities/*": [
                "domain/entities/*"
            ]
        }
    },
    "module": {
        "type": "commonjs"
    }
}